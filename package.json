{
  "name": "swapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@rebass/forms": "^4.0.6",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-scripts": "3.2.0",
    "rebass": "^4.0.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{js,json,css}\"",
    "ci": "npm run lint && cross-env CI=true npm run test --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/stories/**/*.js",
      "!src/utils.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functioins": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --max-warnings=0",
      "npm run test --bail --findRelatedTests",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.0-0",
    "prettier": "1.18.2"
  }
}
